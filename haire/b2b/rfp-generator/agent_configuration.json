{
  "info": {
    "slug": "rfp-generator",
    "name": "RFP/제안서 초안 생성기",
    "version": "1.0.0",
    "description": "고객사 정보와 우리 서비스 소개를 입력하면, 맞춤형 제안서 초안과 예상 질문 리스트를 생성합니다.",
    "price": 1200,
    "icon": "file-text",
    "category": "영업/사업개발",
    "tags": ["제안서", "RFP", "영업", "프레젠테이션", "사업개발"]
  },

  "run": {
    "engine": "python-3.11",
    "entry_point": "src.main:run",
    "dependencies": "requirements.txt"
  },

  "resources": {
    "llm": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-20250514",
      "parameters": {
        "temperature": 0.4,
        "max_tokens": 8192
      }
    },
    "tools": [
      {
        "name": "web_researcher",
        "description": "고객사 홈페이지, 뉴스, IR 자료 자동 수집",
        "library": "Playwright + BeautifulSoup"
      },
      {
        "name": "docx_generator",
        "description": "제안서 DOCX/PDF 파일 생성",
        "library": "python-docx + reportlab"
      }
    ],
    "auth": []
  },

  "inputs": [
    {
      "name": "client_info",
      "type": "text_area",
      "label": "고객사 정보",
      "placeholder": "고객사명, 업종, 최근 이슈 등을 입력하세요.\n또는 고객사 홈페이지 URL을 입력하면 자동으로 조사합니다.",
      "required": true
    },
    {
      "name": "client_url",
      "type": "text",
      "label": "고객사 홈페이지 URL (선택)",
      "placeholder": "https://www.client-company.com",
      "required": false
    },
    {
      "name": "our_service",
      "type": "text_area",
      "label": "우리 서비스/솔루션 소개",
      "placeholder": "제안하려는 서비스의 핵심 기능, 강점, 차별점을 적어주세요.",
      "required": true
    },
    {
      "name": "rfp_document",
      "type": "file_upload",
      "label": "RFP 원문 (있는 경우)",
      "accept": [".pdf", ".docx", ".hwp", ".txt"],
      "max_files": 1,
      "max_size_mb": 30,
      "required": false
    },
    {
      "name": "proposal_type",
      "type": "radio",
      "label": "제안서 유형",
      "options": [
        {"value": "full", "label": "정식 제안서 (10~20페이지 분량)"},
        {"value": "summary", "label": "요약 제안서 (3~5페이지 분량)"},
        {"value": "email", "label": "이메일용 제안 요약 (1페이지)"}
      ],
      "default": "full",
      "required": true
    },
    {
      "name": "emphasis",
      "type": "checkbox_group",
      "label": "강조할 항목",
      "options": [
        {"value": "cost_efficiency", "label": "비용 절감 효과"},
        {"value": "technical_edge", "label": "기술적 우위"},
        {"value": "references", "label": "유사 사례/레퍼런스"},
        {"value": "timeline", "label": "빠른 도입 일정"},
        {"value": "support", "label": "사후 지원 체계"}
      ],
      "default": ["cost_efficiency", "technical_edge"],
      "required": true
    },
    {
      "name": "output_format",
      "type": "radio",
      "label": "결과물 파일 형식",
      "options": [
        {"value": "docx", "label": "워드 파일 (.docx)"},
        {"value": "pdf", "label": "PDF 파일"},
        {"value": "markdown", "label": "마크다운 (복사/붙여넣기용)"}
      ],
      "default": "docx",
      "required": true
    }
  ],

  "outputs": {
    "view_type": "document_with_supplements",
    "items": [
      {
        "name": "proposal_document",
        "type": "file",
        "label": "제안서 초안 파일"
      },
      {
        "name": "executive_summary",
        "type": "markdown",
        "label": "핵심 요약 (임원 보고용)"
      },
      {
        "name": "expected_qa",
        "type": "table",
        "label": "예상 질문 & 답변",
        "columns": ["예상 질문", "추천 답변 방향", "근거 데이터"]
      },
      {
        "name": "client_research",
        "type": "markdown",
        "label": "고객사 사전 조사 결과"
      }
    ]
  }
}
