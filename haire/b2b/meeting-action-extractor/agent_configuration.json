{
  "info": {
    "slug": "meeting-action-extractor",
    "name": "회의록 액션아이템 추출기",
    "version": "1.0.0",
    "description": "회의 녹음 파일이나 텍스트 회의록에서 핵심 요약과 담당자별 액션아이템을 자동으로 추출합니다.",
    "price": 700,
    "icon": "clipboard-check",
    "category": "PM/기획",
    "tags": ["회의록", "액션아이템", "요약", "프로젝트관리", "STT"]
  },

  "run": {
    "engine": "python-3.11",
    "entry_point": "src.main:run",
    "dependencies": "requirements.txt"
  },

  "resources": {
    "llm": {
      "provider": "openai",
      "model": "gpt-4o",
      "parameters": {
        "temperature": 0.2,
        "max_tokens": 4096
      }
    },
    "tools": [
      {
        "name": "whisper_stt",
        "description": "음성 파일을 텍스트로 변환 (한국어/영어 지원)",
        "library": "OpenAI Whisper large-v3"
      }
    ],
    "auth": []
  },

  "inputs": [
    {
      "name": "meeting_source",
      "type": "radio",
      "label": "회의록 입력 방식",
      "options": [
        {"value": "audio", "label": "음성 파일 업로드"},
        {"value": "text", "label": "텍스트 직접 입력/붙여넣기"}
      ],
      "required": true
    },
    {
      "name": "audio_file",
      "type": "file_upload",
      "label": "회의 녹음 파일",
      "accept": [".mp3", ".wav", ".m4a", ".webm", ".ogg"],
      "max_files": 1,
      "max_size_mb": 200,
      "required": false,
      "visible_when": {"meeting_source": "audio"}
    },
    {
      "name": "meeting_text",
      "type": "text_area",
      "label": "회의록 텍스트",
      "placeholder": "회의 내용을 텍스트로 붙여넣으세요. 발언자 구분이 있으면 더 정확합니다.\n\n예:\n김팀장: 이번 분기 목표 달성률이...\n이대리: 마케팅 캠페인 결과를 보면...",
      "required": false,
      "visible_when": {"meeting_source": "text"}
    },
    {
      "name": "participants",
      "type": "text_area",
      "label": "참석자 목록 (선택)",
      "placeholder": "예: 김철수 팀장, 이영희 대리, 박민수 사원",
      "required": false
    },
    {
      "name": "output_style",
      "type": "radio",
      "label": "정리 형식",
      "options": [
        {"value": "notion", "label": "Notion 스타일 (마크다운)"},
        {"value": "table", "label": "표 형식 (엑셀 다운로드 포함)"},
        {"value": "both", "label": "둘 다"}
      ],
      "default": "both",
      "required": true
    }
  ],

  "outputs": {
    "view_type": "structured_report",
    "items": [
      {
        "name": "meeting_summary",
        "type": "markdown",
        "label": "회의 요약"
      },
      {
        "name": "action_items",
        "type": "table",
        "label": "액션아이템 목록",
        "columns": ["번호", "담당자", "할 일", "마감일(언급된 경우)", "우선순위", "관련 발언 원문"]
      },
      {
        "name": "decisions",
        "type": "list",
        "label": "결정 사항"
      },
      {
        "name": "open_issues",
        "type": "list",
        "label": "미결 사항 / 다음 회의 안건"
      },
      {
        "name": "download_file",
        "type": "file",
        "label": "정리본 다운로드 (마크다운 또는 엑셀)"
      }
    ]
  }
}
