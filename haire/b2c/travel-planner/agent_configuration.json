{
  "info": {
    "slug": "travel-planner",
    "name": "여행 플래너",
    "version": "1.0.0",
    "description": "목적지, 일정, 예산, 취향을 입력하면 시간대별 일정표와 맛집/숙소 추천, 예산 배분표를 생성합니다.",
    "price": 500,
    "icon": "map-pin",
    "category": "여행/라이프",
    "tags": ["여행", "일정", "맛집", "숙소", "예산", "코스"]
  },

  "run": {
    "engine": "python-3.11",
    "entry_point": "src.main:run",
    "dependencies": "requirements.txt"
  },

  "resources": {
    "llm": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-20250514",
      "parameters": {
        "temperature": 0.7,
        "max_tokens": 8192
      }
    },
    "tools": [
      {
        "name": "place_search",
        "description": "관광지, 맛집, 숙소 검색 및 평점/리뷰 수집",
        "library": "Google Places API + Naver Local API"
      },
      {
        "name": "route_optimizer",
        "description": "동선 최적화 및 이동 시간 계산",
        "library": "Google Directions API"
      }
    ],
    "auth": []
  },

  "inputs": [
    {
      "name": "destination",
      "type": "text",
      "label": "여행지",
      "placeholder": "예: 오사카, 제주도, 파리",
      "required": true
    },
    {
      "name": "duration",
      "type": "text",
      "label": "여행 기간",
      "placeholder": "예: 2박3일, 3박4일, 당일치기",
      "required": true
    },
    {
      "name": "budget",
      "type": "text",
      "label": "예산 (1인 기준)",
      "placeholder": "예: 50만원, 100만원, 제한 없음",
      "required": true
    },
    {
      "name": "travel_style",
      "type": "checkbox_group",
      "label": "여행 스타일",
      "options": [
        {"value": "food", "label": "맛집 탐방"},
        {"value": "culture", "label": "문화/역사 탐방"},
        {"value": "nature", "label": "자연/힐링"},
        {"value": "shopping", "label": "쇼핑"},
        {"value": "activity", "label": "액티비티/체험"},
        {"value": "photo", "label": "인생샷 명소"}
      ],
      "required": true
    },
    {
      "name": "companions",
      "type": "radio",
      "label": "동행 유형",
      "options": [
        {"value": "solo", "label": "혼자"},
        {"value": "couple", "label": "커플"},
        {"value": "friends", "label": "친구"},
        {"value": "family_kids", "label": "가족 (아이 동반)"},
        {"value": "family_parents", "label": "가족 (부모님 동반)"}
      ],
      "required": true
    },
    {
      "name": "constraints",
      "type": "text_area",
      "label": "특별 요청 사항 (선택)",
      "placeholder": "예: 휠체어 접근 가능한 곳만, 해산물 알레르기 있음, 숙소는 역 근처로",
      "required": false
    }
  ],

  "outputs": {
    "view_type": "itinerary",
    "items": [
      {
        "name": "daily_itinerary",
        "type": "structured_timeline",
        "label": "일자별 상세 일정",
        "fields_per_slot": ["시간", "장소", "활동 내용", "예상 비용", "이동 수단/소요 시간", "팁"]
      },
      {
        "name": "restaurant_list",
        "type": "table",
        "label": "맛집 추천 리스트",
        "columns": ["식당명", "메뉴 종류", "가격대", "평점", "추천 이유", "예약 필요 여부"]
      },
      {
        "name": "accommodation_list",
        "type": "table",
        "label": "숙소 추천 리스트",
        "columns": ["숙소명", "유형", "1박 가격", "평점", "위치 특징"]
      },
      {
        "name": "budget_breakdown",
        "type": "table",
        "label": "예산 배분표",
        "columns": ["항목", "예상 비용", "비율", "비고"]
      },
      {
        "name": "packing_checklist",
        "type": "list",
        "label": "준비물 체크리스트"
      }
    ]
  }
}
