{
  "info": {
    "slug": "thumbnail-designer",
    "name": "썸네일 & 배너 디자이너",
    "version": "1.0.0",
    "description": "주제와 스타일을 입력하면 유튜브 썸네일, 블로그 배너, SNS 커버 이미지를 생성합니다.",
    "price": 400,
    "icon": "image",
    "category": "디자인/크리에이터",
    "tags": ["썸네일", "배너", "유튜브", "디자인", "이미지 생성"]
  },

  "run": {
    "engine": "python-3.11",
    "entry_point": "src.main:run",
    "dependencies": "requirements.txt"
  },

  "resources": {
    "llm": {
      "provider": "openai",
      "model": "gpt-4o",
      "parameters": {
        "temperature": 0.3,
        "max_tokens": 1024
      }
    },
    "tools": [
      {
        "name": "image_generator",
        "description": "이미지 생성 모델",
        "library": "DALL-E 3 API"
      },
      {
        "name": "image_compositor",
        "description": "텍스트 합성 및 사이즈 조정",
        "library": "Pillow + 자체 텍스트 렌더링 엔진"
      }
    ],
    "auth": []
  },

  "inputs": [
    {
      "name": "content_topic",
      "type": "text_area",
      "label": "콘텐츠 주제/제목",
      "placeholder": "예: 자취생 냉장고 파먹기 레시피 / 일본 오사카 3일 여행기 / 코딩 입문자를 위한 Python 강의",
      "required": true
    },
    {
      "name": "image_type",
      "type": "radio",
      "label": "이미지 용도",
      "options": [
        {"value": "youtube_thumbnail", "label": "유튜브 썸네일 (1280x720)"},
        {"value": "blog_banner", "label": "블로그 대표 이미지 (1200x630)"},
        {"value": "instagram_post", "label": "인스타그램 피드 (1080x1080)"},
        {"value": "instagram_story", "label": "인스타그램 스토리 (1080x1920)"},
        {"value": "custom", "label": "직접 입력"}
      ],
      "required": true
    },
    {
      "name": "custom_size",
      "type": "text",
      "label": "커스텀 사이즈 (가로x세로, px)",
      "placeholder": "예: 1920x1080",
      "required": false,
      "visible_when": {"image_type": "custom"}
    },
    {
      "name": "style",
      "type": "radio",
      "label": "디자인 스타일",
      "options": [
        {"value": "minimal", "label": "미니멀/깔끔"},
        {"value": "bold", "label": "굵은 텍스트/임팩트"},
        {"value": "warm", "label": "따뜻한/감성적"},
        {"value": "retro", "label": "레트로/빈티지"},
        {"value": "tech", "label": "테크/미래적"},
        {"value": "pop", "label": "팝/컬러풀"}
      ],
      "required": true
    },
    {
      "name": "text_overlay",
      "type": "text",
      "label": "이미지 위에 들어갈 텍스트 (선택)",
      "placeholder": "예: 5분 완성! / TOP 10 / EP.03",
      "required": false
    },
    {
      "name": "color_preference",
      "type": "text",
      "label": "선호 색상 (선택)",
      "placeholder": "예: 파란색 계열, #FF5733, 브랜드 컬러는 민트색",
      "required": false
    },
    {
      "name": "reference_image",
      "type": "file_upload",
      "label": "참고 이미지 (선택)",
      "accept": [".jpg", ".jpeg", ".png"],
      "max_files": 3,
      "max_size_mb": 10,
      "required": false
    },
    {
      "name": "variant_count",
      "type": "radio",
      "label": "시안 개수",
      "options": [
        {"value": "3", "label": "3개"},
        {"value": "5", "label": "5개"}
      ],
      "default": "3",
      "required": true
    }
  ],

  "outputs": {
    "view_type": "image_gallery",
    "items": [
      {
        "name": "generated_images",
        "type": "image_array",
        "label": "생성된 시안",
        "format": "PNG"
      },
      {
        "name": "design_notes",
        "type": "list",
        "label": "시안별 디자인 의도 설명"
      }
    ]
  }
}
